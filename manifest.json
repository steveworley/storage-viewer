{
    "manifest_version": 2,
    "name":    "Storage Viewer",
    "version": "1.0",
    "offline_enabled": true,

    "background": {
        "persistent": false,
        "scripts": ["includes/js/background.js"]
    },

    "browser_action": {
        "default_title": "Storage Viewer",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    // No special permissions required...
    "permissions": ["activeTab"]
}
